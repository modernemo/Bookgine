<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOOKGINE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">BOOKGINE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container py-5">
        <div class="text-center mb-4">
            <h1 class="fw-bold">Welcome to Book Review App</h1>
            <p class="text-muted">Read and share honest book reviews</p>
            <button class="btn btn-success mt-3" onclick="window.location.href='/reviews/add'">Add New Review</button>
        </div>

        <!-- Reviews Section -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="mb-3">Book Reviews</h2>
                <div class="list-group shadow-sm">
                    <% for (review of reviews) { %>
                        <a href="/reviews/<%= review.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <strong><%= review.body %></strong><br>              
                            </div>
                            <span class="badge bg-success rounded-pill fs-6"><%= review.rating %>/5</span>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>